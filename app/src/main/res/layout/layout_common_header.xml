<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/search_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_songs_count_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:text="73 Songs"
        android:textColor="@color/radio_up"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/hide_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <LinearLayout
            android:id="@+id/random_LinearLayout"
            android:layout_width="153dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_shuffle_play"
            android:gravity="center">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@mipmap/icon_random_play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/random_play"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/list_change_imageView"
            android:layout_width="19dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_change_list" />

        <CheckBox
            android:id="@+id/sort_CheckBox"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:layout_toLeftOf="@id/list_change_imageView"
            android:background="@drawable/selector_sort"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cancel_TextView"
        android:layout_width="86.5dp"
        android:layout_height="34.5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14.5dp"
        android:gravity="center"
        android:text="@string/cancel_small"
        android:textColor="#8e8e8e"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_dividing_line" />
</RelativeLayout>