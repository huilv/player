<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/search_bg">

    <ImageView
        android:id="@+id/logo_ImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/icon_loading_default" />

    <TextView
        android:id="@+id/title_TextView"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/logo_ImageView"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/singer_TextView"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@id/title_TextView"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/logo_ImageView"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:paddingRight="12dp"
        android:singleLine="true"
        android:textColor="@color/search_text"
        android:textSize="12.5sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@id/singer_TextView"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/logo_ImageView"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/duration_TextView"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:includeFontPadding="false"
            android:textColor="@color/search_text"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/entry_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="14dp"
                android:background="@mipmap/icon_play_count" />

            <TextView
                android:id="@+id/play_count_TextView"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:includeFontPadding="false"
                android:text="10k"
                android:textColor="@color/search_text"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="14dp"
                android:background="@mipmap/icon_favorite_count" />

            <TextView
                android:id="@+id/favorite_count_TextView"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:includeFontPadding="false"
                android:text="10k"
                android:textColor="@color/search_text"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_dividing_line" />
</RelativeLayout>