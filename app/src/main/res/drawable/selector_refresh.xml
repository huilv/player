<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:radius="28.5dp" />
            <stroke android:width="1.5dp" android:color="@color/refresh_bg" />
            <solid android:color="@color/refresh_bg" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="28.5dp" />
            <stroke android:width="1.5dp" android:color="@color/refresh_bg_press" />
            <solid android:color="@color/refresh_bg_press" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="28.5dp" />
            <stroke android:width="1.5dp" android:color="@color/refresh_bg" />
            <solid android:color="@color/refresh_bg" />
        </shape>
    </item>

</selector>